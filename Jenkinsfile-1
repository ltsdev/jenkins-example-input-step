pipeline {
  agent any
      environment {
        def TAG_VERSION = sh(returnStdout: true, script: "echo '${env.GIT_BRANCH}' | cut -d'/' -f3").trim()
    }
  stages {
    stage('input') {
      steps {
        input(message: "Hello World! ${TAG_VERSION}", ok: 'Submit')
        sh "cp -r /kubeconfig/* ."
        sh "pwd"
        sh "ls -la /"
        sh '''
          hostname
          cat /etc/os-release
          echo ${TAG_VERSION}
        '''
      }
    }
  }
}
